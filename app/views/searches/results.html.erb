<div class="container">
      <div class="nav">
      <ul>
        <% if logged_in? %>
        <div class="logo">
        <li><%= link_to "Awesome Citi", root_path %> </li>
        </div>
        <li><%= link_to "My Account", account_path %> </li>
        <li><%= link_to "New Search", new_search_path %> </li>
        <li><%= link_to 'Logout', session_path, :method => :delete %> </li>
        <% end %>
      </ul>
    </div>

  <div class="results">
    <%  unless @coordinates.nil? %>
      
      <ul>
        <% if @winning_bike_station["label"] == @winning_dock_station["label"]  %> 
        <li><%= "CityBike Station:"%><address><%= "#{@winning_bike_station["label"]}"%></address></li>
        <li><%="Docks: #{@winning_bike_station["availableDocks"] }.  Bikes: #{@winning_bike_station["availableBikes"] }"  %></li>
      </ul>
      <% else %>
      <ul>
        <li><%= "Docks:"%><address><%="#{@winning_dock_station["label"]}"%></address></li>
        <li><%="Available: #{@winning_dock_station["availableDocks"] }" %></li>
        <li><%= "Bikes:"%>"<address><%="#{@winning_bike_station["label"]}"%></address></li>
        <li><%="Available: #{@winning_bike_station["availableBikes"] }" %></li>
      </ul>   
      <% end %>
    <% end  %>
</div>

<!-- next closest staton -->
<% if @winning_bike_station["label"] == @winning_dock_station["label"] %>
  <div class="next_best">
      <ul>  
        <li>Next closest station:</li>       
        <li><address><%= "#{@next_best_station[0]["label"]}" %></address></li>
        <li><%= "Docks: #{@next_best_station[0]["availableDocks"]}.  Bikes: #{@next_best_station[0]["availableBikes"]}" %></li>
      <ul>
  </div>
  <% end %>

    <div class="destination">
      <%= form_tag user_favorites_path(current_user), :method => :post do %>
      <%= hidden_field_tag "favorite[address]", params[:address]%>
      <%= submit_tag "Save This Destination", :class => 'saved_destination', :name => :address %> 
      <% end %>
  </div>

<div class="saved_2">
    <h6><%= link_to "Go to Saved Destinations", user_path(current_user) %></h6>
    <h6><%= link_to "New Search", new_search_path %> </h6>
  </div> 

</div>















